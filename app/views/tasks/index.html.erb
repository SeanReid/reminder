<h1>Reminders</h1>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Due</th>
      </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.due.strftime("%b %e, %l:%M %p") %></td>
        <td><%= link_to 'Show', task, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class:"btn btn-warning" %></td>
        <td><%= link_to "Done", task, method: :delete, remote: true, class:"btn btn-danger", "data-confirm"=> "Delete?"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Task', new_task_path, class:"btn btn-success btn-lg btn-block" %>
